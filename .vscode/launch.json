{
    // https://go.microsoft.com/fwlink/?linkid=830387

    "version": "0.2.0",
    "configurations": [

        {
            "name": "jdp-assistant",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/jdp-assistant/src/app.py",
                "FLASK_DEBUG": "1",
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/jdp-assistant/.venv/Scripts/python.exe"
        }
    ]
}